{{#if addNewAnswer}}
  <div>
    <h1>New Answer</h1>
    <form>
      <div class="form-group">
        {{input value=user id="user" placeholder="Name" class="form-control"}}
      </div>
      <div class="form-group">
        {{input value=reply id="reply" placeholder="Your answer" class="form-control"}}
      </div>
      <button class="btn btn-default center-block" {{action 'saveAnswer'}}>Post</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-default" {{action 'answerFormShow'}}>Answer</button>
{{/if}}

{{#if addNewQuestion}}
  <div class="new-question-form">
    <h3>Ask A Question</h3>
    <form>
      <div class="form-group">
        {{input class="form-control" placeholder="Name" value=author id="author"}}
      </div>
      <div class="form-group">
        {{input class="form-control" placeholder="Question" value=authorQ id="authorQ"}}
      </div>
      <div class="form-group">
        {{input class="form-control" placeholder="Other notes" value=notes id="notes"}}
      </div>
      <button {{action 'saveQuestion'}} class="btn btn-default center-block">Submit</button>
    </form>
  </div>
{{else}}
  <button class="btn question-btn center-block" {{action 'questionFormShow'}}>Ask a Question!</button>
{{/if}}
